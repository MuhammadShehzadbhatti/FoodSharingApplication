<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/colorImageViewBackground">


            </ViewFlipper>

            <View
                android:id="@+id/SplitLine_hor7"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorAdText" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:background="@color/cardBackground"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/titlePost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:layout_weight="2"
                        android:text="Title"
                        android:textColor="@color/colorAdText"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pricePost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:gravity="right|top"
                        android:text="Price"
                        android:textColor="@color/priceColor"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:id="@+id/SplitLine_hor"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorAdText" />


                <TextView
                    android:id="@+id/descPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="9dp"
                    android:text="Description"
                    android:textColor="@color/colorAdText"
                    android:textSize="17dp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Food Details"
                    android:textColor="@color/colorAdText"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/SplitLine_hor1"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/colorAdText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:text="Pickup Time : "
                        android:textColor="@color/colorAdText"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/timePost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:text="Pick up Time"
                        android:textColor="@color/colorAdText"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:id="@+id/SplitLine_hor2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAdText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:text="Food Type : "
                        android:textColor="@color/colorAdText"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/typePost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:text="Food Type"
                        android:textColor="@color/colorAdText"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:id="@+id/SplitLine_hor3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAdText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:text="Availability Details : "
                        android:textColor="@color/colorAdText"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/availability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:text="Availability"
                        android:textColor="@color/colorAdText"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:id="@+id/SplitLine_hor4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAdText" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:text="Cuisine Type : "
                        android:textColor="@color/colorAdText"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/cuisineTypePost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:text="Cuisine Type"
                        android:textColor="@color/colorAdText"
                        android:textSize="20dp" />
                </LinearLayout>

                <View
                    android:id="@+id/SplitLine_hor5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorAdText" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:text="Payment Method : "
                        android:textColor="@color/colorAdText"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/paymentPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="9dp"
                        android:text="Payment Method"
                        android:textColor="@color/colorAdText"
                        android:textSize="20dp" />

                </LinearLayout>

                <View
                    android:id="@+id/SplitLine_hor6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorAdText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <fragment
                        android:id="@+id/map1"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        tools:context="com.example.mapwithmarker.MapsMarkerActivity" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btn_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/btnPay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="Pay"
                        android:textColor="#fff"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/bid_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="Buy"
                        android:textColor="#fff"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/chat_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:text="Chat"
                        android:textColor="#fff"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>




